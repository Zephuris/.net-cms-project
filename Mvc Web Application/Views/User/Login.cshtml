@model LogonRequestViewModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Login</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <form asp-action="Login" asp-controller="user" method="post" role="form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input type="text" asp-for="Username" class="form-control" required/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="psw" class="control-label"></label>
                <input type="password" id="password" name="psw" asp-for="psw" class="form-control" required />
                <span asp-validation-for="psw" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
